generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  userId       String   @id
  email        String
  username     String
  name         String?
  bio          String?
  avatarUrl    String?
  coverUrl     String?
  verifiedTier String   @default("NONE") // BLUE|SILVER|GOLD|NONE
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model InboxEvent {
  eventId     String   @id
  topic       String
  processedAt DateTime @default(now())
}
