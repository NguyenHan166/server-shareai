generator client {
  provider     = "prisma-client"
  output       = "../generated/client"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model AuthUser {
  id           String   @id @default(uuid())
  email        String   @unique
  username     String   @unique
  passwordHash String
  status       String   @default("ACTIVE")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model OutboxEvent {
  id String @id @default(uuid())

  // Kafka topic to publish to
  topic String

  // Kafka partition key (recommend: aggregateId like userId)
  key String?

  // Envelope / event payload (JSON)
  payload Json

  // Optional Kafka headers (JSON)
  headers Json?

  /**
   * Status lifecycle:
   * PENDING -> PROCESSING -> PUBLISHED
   * PENDING/PROCESSING -> (retry) -> PENDING
   * after max attempts -> FAILED (and publish dlq.<topic>)
   */
  status String @default("PENDING") // PENDING|PROCESSING|PUBLISHED|FAILED

  // Retry control
  attempts      Int      @default(0)
  nextAttemptAt DateTime @default(now())

  // Observability
  lastError   String?
  createdAt   DateTime  @default(now())
  publishedAt DateTime?

  @@index([status, nextAttemptAt, createdAt])
  @@index([topic, createdAt])
  @@index([key])
}
